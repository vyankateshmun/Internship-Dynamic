<%- include('partials/header'); %>
<div class="row topmar">
    <h1 style="text-align: center">Update Individual Slider</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/slideredit/<%= slider._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="image" value="<%= slider.image %>" placeholder="Image Name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="title" value="<%= slider.title %>" placeholder="Title">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= slider.description %>" placeholder="Description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
        <a href="/">Go Back</a>
    </div>
</div>
<%- include('partials/footer'); %>