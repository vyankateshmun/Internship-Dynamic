<%- include('partials/header'); %>
<div class="row topmar">
    <h1 style="text-align: center">Edit Timeline</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/timeline/<%= timeline._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="number" name="year" value="<%= timeline.year%>" placeholder="Year" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= timeline.description%>" placeholder="Description" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/about">Go Back</a>
    </div>
</div>
<%- include('partials/footer'); %>