<%- include('partials/header'); %>
<div class="row topmar">
    <h1 style="text-align: center">Update Counter Details</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/counter?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="number" name="num1" value="<%= counter[0].num1 %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="num2" value="<%= counter[0].num2 %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="num3" value="<%= counter[0].num3 %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="num4" value="<%= counter[0].num4 %>" required>
            </div>
            <input type='hidden' name='id' value='<%= counter[0]._id %>' />
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
        <a href="/index">Go Back</a>
    </div>
</div>
<%- include('partials/footer'); %>